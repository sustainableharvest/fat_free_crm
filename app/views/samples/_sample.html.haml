- if (params['controller'] == 'samples') and (template = template_for_current_view).present?
  = render(template, :sample => sample)
- else
  - if params["action"] == "index"
    = render 'samples/index_long', :sample => sample, :short_state => sample.short_state
  - else
    = render 'samples/index_short', :sample => sample, :short_state => sample.short_state