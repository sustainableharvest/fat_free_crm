.panel#summary
  .caption #{t :sample_summary}
  %li
    %dt= @sample.state ? t(@sample.state) : t(:other)
    %tt #{t :state}:
  %li
    %dt= @sample.opportunity ? link_to(t(@sample.opportunity.name), opportunity_path(@sample.opportunity)) : t(:other)
    %tt #{t :opportunity}:

  - if @sample.pricing_type == "Spot"
    %li
      %dt= @sample.pricing_type ? t(@sample.pricing_type) : t(:other)
      %tt #{t :pricing_type}:
    %li
      %dt= @sample.rits_purchase_contract_id ? link_to(t(@sample.rits_purchase_contract_id), "http://rits.sustainableharvest.com/purchase_contracts/" + @sample.rits_id.to_s, :target => "_blank") : t(:n_a)
      %tt #{t :rits_id}:
    %li
      %dt= @sample.ssp ? number_to_currency(@sample.ssp, :precision => 2) : t(:n_a)
      %tt #{t :ssp}:
    %li
      %dt= @sample.fob_price ? number_to_currency(@sample.fob_price, :precision => 2) : t(:n_a)
      %tt #{t :fob}:

  - else
    %li
      %dt= @sample.pricing_type ? "Forward " + t(@sample.pricing_type) : t(:other)
      %tt #{t :pricing_type}:
    %li
      %dt= @sample.differential ? number_to_currency(@sample.differential, :precision => 2) : t(:n_a)
      %tt #{t :differential}:
    %li
      %dt= @sample.delivery_month ? t(@sample.delivery_month.strftime("%B %Y")) : t(:n_a)
      %tt #{t :delivery_month}:

  %li
    %dt= @sample.producer.present? ? t(@sample.producer) : t(:n_a)
    %tt #{t :producer}:
  %li
    %dt= @sample.quoted_price.present? ? number_to_currency(@sample.quoted_price, :precision => 2) : t(:n_a)
    %tt #{t :quoted_price}:
  %li
    %dt= @sample.sh_fee ? number_to_currency(@sample.sh_fee, :precision => 2) : t(:n_a)
    %tt #{t :sh_fee}:
  %li
    %dt= @sample.shipment_date ? t(@sample.shipment_date.strftime("%_m/%e/%Y")) : t(:n_a)
    %tt #{t :shipment_date}:

  - @sample.complete? ? overdue = "complete" : (overdue = @sample.overdue? ? "overdue" : "not")
  %li
    %dt{:class => overdue}= @sample.follow_up_date ? t(@sample.follow_up_date.strftime("%_m/%e/%Y")) : t(:n_a)
    %tt{:class => overdue} #{t :follow_up_date}:

  %li
    %dt= @sample.description.present? ? truncate(@sample.description, :length => 16) : t(:n_a)
    %tt #{t :description}:

  = render "fields/sidebar_show", :asset => @sample

  - if @sample.tag_list.present?
    %dt
      .tags= tags_for_index(@sample)

  = hook(:show_sample_sidebar_bottom, self, :sample => @sample)