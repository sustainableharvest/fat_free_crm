.title= t(:opportunities_report)

.report
  = link_to t(:sales_report), sales_report_opportunities_path
  = " | "
  = link_to t(:cash_report), cash_report_opportunities_path

%script{:type => "text/javascript"}
  :plain
    $(function () {

      Highcharts.setOptions({
        lang: {
        thousandsSep: ','
        }
      });
        $('#chart_div').highcharts({
            chart: {
                type: 'funnel',
                marginRight: 100
            },
            title: {
                text: 'Total pounds in Sales Pipeline by Stage',
                x: -50
            },
            plotOptions: {
                series: {
                    dataLabels: {
                        enabled: true,
                        format: '<b>{point.name}</b> ({point.y:,.0f} lbs)',
                        color: (Highcharts.theme && Highcharts.theme.contrastTextColor) || 'black',
                        softConnector: true
                    },
                    neckWidth: '50%',
                    neckHeight: '30%'

                    //-- Other available options
                    // height: pixels or percent
                    // width: pixels or percent
                }
            },
            tooltip: {
              valueSuffix: " lbs"
            },
            legend: {
                enabled: false
            },
            series: [{
                name: 'Total pounds',
                data: #{@pyramid}
            }]
        });
    });
- [@wynne, @saraz, @dane].each do |usr| 
  %script{:type => "text/javascript"}
    :plain
      $(function () {
      $('#{usr.full_name}').highcharts({
            title: {
                text: "#{usr.full_name}'s Goals vs Pipeline"
            },
            xAxis: {
                categories: #{usr.weighted_amount_over_year.keys}
            },
            labels: {
                items: [{
                    style: {
                        left: '50px',
                        top: '18px',
                        color: (Highcharts.theme && Highcharts.theme.textColor) || 'black'
                    }
                }]
            },
            series: [{
                type: 'column',
                name: 'Jane',
                data: #{usr.weighted_amount_over_year.values}
            }, {
                type: 'spline',
                name: 'Goal',
                data: #{usr.goals_by_month.values},
                marker: {
                    lineWidth: 2,
                    lineColor: Highcharts.getOptions().colors[3],
                    fillColor: 'white'
                }
            }]
          });
        });




= column_chart @stacked_chart, stacked: true, library: {title: "#{Date.today.year} Weighted Monthly Bags in Pipeline"}

= pie_chart @total_weighted_by_user, library: {pieSliceText: "value-and-percentage", pieSliceTextStyle: {fontSize: "9"}, title: "Total Weighted Bags in Pipeline - #{Opportunity.sum_weighted_amount}" }

